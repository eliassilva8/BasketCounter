<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ems.android.basketcounter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application>
        <activity
            android:name=".free.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".free.DisplayActivity"
            android:parentActivityName=".free.MainActivity"/>
        <activity
            android:name=".free.ConfigActivity"
            android:parentActivityName=".free.MainActivity" />
        <activity
            android:name=".free.DetailsActivity"
            android:parentActivityName=".free.MainActivity">
        </activity>
    </application>

</manifest>